@model  IEnumerable<ID.ValueObjects.UserVO>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>User</h2>
<hr />

@using (Html.BeginForm("create", "user", FormMethod.Post, new { @class = "form-horizontal well" }))
{
    @Html.Hidden("UserId")

    <fieldset>
        <div class="form-group">
            <div class="col-lg-4">
                @Html.TextBox("FirstName", "", new { @class = "form-control", @placeholder = "First Name" })
            </div>
            <div class="col-lg-4">
                @Html.TextBox("LastName", "", new { @class = "form-control", @placeholder = "Last Name" })
            </div>
            <div class="col-lg-4">
                @Html.TextBox("UserEmail", "", new { @class = "form-control", @placeholder = "User Email" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-lg-4">
                @Html.TextBox("UserPassword", "", new { @class = "form-control", @placeholder = "User Password" })
            </div>
            <div class="col-lg-2">
                <input type="submit" class="btn btn-info" id="AddUser" value="Add User">
            </div>
        </div>
    </fieldset>
}
<br />
<br />

<table class="table table-striped table-hover ">
    <thead>
        <tr class="warning">
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Action</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var model in Model)
        {
            <tr class="info">
                <td>@Html.DisplayFor(modelItem => model.UserId)</td>
                <td>@Html.DisplayFor(modelItem => (model.FirstName))</td>
                <td>@Html.DisplayFor(modelItem => model.UserEmail)</td>
                <td>@Html.DisplayFor(modelItem => model.UserPassword)</td>
                <td>
                    <a href="javascript:void(0);" class="EditUser">Edit</a> | <a href="javascript:void(0);" class="DeleteUser">Delete</a>
                </td>
                <td>
                    <input type="checkbox" class="checkbox" />
                </td>
            </tr>
        }

    </tbody>
</table>

<ul class="pagination">
    <li class="disabled"><a href="#">&laquo;</a></li>
    <li class="active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li><a href="#">&raquo;</a></li>
</ul>

@{
    Html.RenderPartial("~/Views/Shared/_DeletePartial.cshtml", "User");
}

@section Scripts{

    <script src="~/Scripts/Application Script/UserScripts.js"></script>
}
