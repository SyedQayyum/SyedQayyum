@model ID.ValueObjects.EmailVO
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<style>
    .field-validation-error {
        color: red !important;
    }
</style>

<div class="row row2 marginTop-35px">
    <div class="col-md-6">

        <div class="contact-form">
            <div class="contact-top-header">
                <h3>@ViewBag.PageHeading</h3>
            </div>
            <div id="success"><span>Your message was sent successfully! I will be in touch as soon as I can.</span></div>
            <div id="error"><span>Something went wrong, try refreshing and submitting the form again.</span></div>

            @using (Html.BeginForm("ContactUs", "home", FormMethod.Post, new { @id = "contact" }))
            {
                @Html.HiddenFor(model => model.ContactFor)
                <div class="row">
                    <div class="col-md-6">
                        <span>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "textbox", @placeholder = "Name" })
                        </span>
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="col-md-6">
                        <span>
                            @Html.TextBoxFor(model => model.UserEmail, new { @class = "textbox", @placeholder = "Email" })
                        </span>
                        @Html.ValidationMessageFor(model => model.UserEmail)
                    </div>
                </div>

                <div>
                    <span>
                        @Html.TextAreaFor(model => model.Body, new { @placeholder = "Message" })
                    </span>
                    @Html.ValidationMessageFor(model => model.Body)
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <span>
                            <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="height:40px" />
                        </span>
                    </div>
                    <div class="col-md-6">
                        <span>
                            @Html.EditorFor(model => model.Captcha)
                        </span>
                        @Html.ValidationMessageFor(model => model.Captcha)
                    </div>
                    <div class="col-md-3">
                        <div style="text-align:right;">
                            <span><input type="submit" name="submit" id="submit" value="Send"></span>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="socialmedia-block">
            <div class="contact-top-header">
                <h3>Get in Touch</h3>
            </div>
            <div class="social_media">
                <ul>
                    <li>
                        <a href="https://www.facebook.com/IndianDecision" class="btn btn-block btn-social btn-lg btn-facebook" target="_blank">
                            <i class="fa fa-facebook"></i> Like us in Facebook
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/IndianDecision" class="btn btn-block btn-social btn-lg btn-twitter" target="_blank">
                            <i class="fa fa-twitter"></i> Follow us in Twitter
                        </a>
                    </li>
                    @*<li>
                            <a href="#" class="btn btn-block btn-social btn-lg btn-google" target="_blank">
                                <i class="fa fa-google-plus"></i> Share in Google
                            </a>
                        </li>*@
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        $(document).ready(function () {
            $('#Captcha').val('');
        })

    </script>
}