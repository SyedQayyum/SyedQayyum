<!Doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>@ViewBag.PageTitle</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/IndianDecision.ico">
    <meta name="keywords" content="indian decisions, indian survey, survey, think india, indian government survey, easy survey questions, survey india, cricket survey, indian thinkings" />
    <meta name="description" content="Best online survey site for indian people" />
    <link rel="stylesheet" type="text/css" href="~/Styles/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/custom-style.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/font-awesome.min.css" />
    <style>
        .flipkart-add {
            width: 300px !important;
        }
    </style>

    @RenderSection("styles", false)

    <script src="~/Scripts/jquery-1.11.3.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.3.0.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>


    @RenderSection("scripts", false)


    <script src="~/Scripts/Application Script/CategoryScripts.js"></script>

    <!-- Top Scrolling -->
    <script type="text/javascript" src="~/Scripts/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/easing.js"></script>
    <script>
        $(document).ready(function () {

            $('#sidebar').affix({
                offset: {
                    top: 75
                }
            });

            /* activate scrollspy menu */
            var $body = $(document.body);
            var navHeight = $('header').outerHeight(true) + 10;

            $body.scrollspy({
                target: '#leftCol',
                offset: navHeight
            });


            $().UItoTop({ easingType: 'easeOutQuart' });
        });
    </script>
</head>

<body>

    <header>
        <div class="header-top">
            <div class="wrap">
                <div class="logo">
                    <a href="~/home/index"><img src="~/Images/logo.png" title="Indian Decisions" alt="" /></a>
                </div>

                <div class="social-media">

                    <input type="button" value="Suggest Survey to Us" class="search-btn header_btn" onclick="window.location.href = '../home/suggest-survey-to-us';" />

                    <ul class="subscribe">
                        <li><a href="https://www.facebook.com/IndianDecision" target="_blank" title="Facebook" class="facebook"> </a></li>
                        <li><a href="https://twitter.com/IndianDecision" target="_blank" title="Twitter" class="twitter"> </a></li>
                        @*<li><a href="#" title="Linkedin" class="linkedIN"> </a></li>
                            <li><a href="#" title="Blogs" class="Blogs"> </a></li>*@
                    </ul>
                    <div class="clear"> </div>
                </div>


                <div class="clear"></div>
            </div>
        </div>
    </header><!-- /header -->

    <div class="main">
        <div class="wrap">
            <div class="main-top">

                <div class="sidebar-left" id="leftCol">
                    <div id="sidebar">
                        <div class="sidebar-heading">
                            <h3>Categories</h3>
                            <h3 class="ResponsiveHeading"><a class="collapsed" data-toggle="collapse" href="#Categories_List">Categories</a></h3>
                        </div>

                        <div class="u-vmenu collapse" id="Categories_List">
                            <ul id="Categories">
                                @Html.Partial("~/Views/User/Partial/_SurveyCategory.cshtml")

                            </ul>
                        </div>
                    </div>
                </div>


                <div class="content">
                    <div class="content-desc">
                        @RenderBody()
                    </div>
                </div>

                <div class="sidebar-right">
                    <div class="ad-placeholder">
                        <script type="text/javascript" language="javascript"> var aax_size = '300x250'; var aax_pubname = 'indiadecis-21'; var aax_src = '302'; </script>
                        <script type="text/javascript" language="javascript" src="http://c.amazon-adsystem.com/aax2/assoc.js"></script>

                    </div>
                    <div class="ad-placeholder" style="margin-top:10px;">
                        <div data-SDID="1245619671" data-identifier="SnapdealAffiliateAds" data-height="250" data-width="300"></div>
                        <script async id="snap_zxcvbnhg" src="https://affiliate-ads.snapdeal.com/affiliate/js/snapdealAffiliate.js"></script>
                    </div>
                    <div class="ad-placeholder" style="margin-top:10px;">
                        <div data-WRID="WRID-146383920599577669" data-widgetType="featuredDeals" data-responsive="yes" data-class="affiliateAdsByFlipkart" class="flipkart-add" height="250" width="300"></div>
                        <script async src="//affiliate.flipkart.com/affiliate/widgets/FKAffiliateWidgets.js"></script>


                    </div>
                </div>

                <div class="clear"></div>
            </div>
        </div>
    </div> <!-- End Main -->

    <div class="copy-right">
        <div class="wrap">
            <div class="row">
                <div class="col-sm-5">
                    <p>© Copyright 2016. All Rights Reserved.</p>
                </div>


                <div class="col-sm-7">
                    <div class="copy-right-links">
                        <ul>
                            <li><a href="~/home/about-us">About us</a></li>
                            <li><a href="~/home/contact-us">Contact us</a></li>
                            <li><a href="~/home/advertise-with-us">Advertise with Us</a></li>
                            <li><a href="~/home/privacy-policy">Privacy Policies</a></li>
                            <li><a href="~/home/terms-of-use">Terms of Use</a></li>
                        </ul>
                    </div>

                </div>
            </div>

            <div class="alert alert-warning alert-dismissible fade in cookies_block" role="alert"> <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button> This website uses cookies to ensure you get the best experience on our website. </div>


        </div>
    </div>
    <!-- End Copy Right -->

    <a href="#" id="toTop"> </a>
    <!-- Scripts -->

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-79378151-1', 'auto');
        ga('send', 'pageview');

    </script>
</body>
</html>
